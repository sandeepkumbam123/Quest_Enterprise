<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="quest.com.quest.activities.SplashScreenActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/ic_login_bg">
        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_weight="4"
            android:id="@+id/activity_splash_screen"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@android:color/white"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="@dimen/dp_500"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="@dimen/dp_500"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFadeWhite"
                        android:textSize="@dimen/dp_20"
                        android:text="@string/login_text"
                        android:gravity="left|center_vertical"/>
                    <TextView
                        android:id="@+id/tv_fill_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFadeWhite"
                        android:textSize="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="Enter your details below"
                        android:gravity="left|center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/dp_500"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_40"
                    android:descendantFocusability="beforeDescendants"

                    android:layout_gravity="center_horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_username"
                        android:layout_width="match_parent"
                        android:focusableInTouchMode="true"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="@dimen/dp_2"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/input_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/username"
                            android:drawablePadding="@dimen/dp_10"
                            android:drawableLeft="@drawable/ic_username"
                            android:inputType="text"
                            android:textColor="@color/colorFadeWhite"
                            android:textSize="@dimen/dp_20"
                            android:singleLine="true"
                            />

                    </android.support.design.widget.TextInputLayout>

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/pb_progresbar"
                        android:visibility="invisible"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_password"
                        android:layout_width="match_parent"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="@dimen/dp_2"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_password"
                            android:inputType="textPassword"
                            android:textSize="@dimen/dp_20"
                            android:drawablePadding="@dimen/dp_10"
                            android:textColor="@color/colorFadeWhite"
                            android:drawableLeft="@drawable/ic_password"
                            android:singleLine="true"
                            />

                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/tv_forgot_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/forgot_password"
                        android:textColor="@color/colorFadeWhite"
                        android:textSize="@dimen/dp_15"
                        android:gravity="right|center_vertical"/>
                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="@dimen/dp_300"
                        android:layout_height="wrap_content"
                        android:text="@string/login"
                        android:layout_marginTop="@dimen/dp_40"
                        android:textSize="@dimen/sp_35"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_20"
                        android:textAllCaps="false"
                        android:paddingLeft="@dimen/dp_40"
                        android:paddingRight="@dimen/dp_40"
                        android:background="@color/colorOrange"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"
                        fontPath="fonts/Ubuntu-M.ttf"
                        android:layout_below="@+id/input_layout_password"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>