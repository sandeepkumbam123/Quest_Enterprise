<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="fragment"
            type="quest.com.quest.fragments.QuestionFragment"/>
        <variable
            name="data"
            type="quest.com.quest.models.QuestionModel"/>
    </data>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/exam_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/ic_examtitlebg"
                android:gravity="top"
                android:layout_marginLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_30"
                android:paddingLeft="@dimen/dp_50"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_35"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/subject_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    fontPath ="fonts/segoeui.ttf"
                    android:textColor="@color/colorlimegreen"
                    android:textSize="@dimen/sp_60"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">
                <TextView
                    android:id="@+id/timer_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_35"
                    android:paddingRight="@dimen/dp_30"
                    android:drawablePadding="@dimen/dp_15"
                    android:drawableLeft="@drawable/ic_time_black"/>
            </LinearLayout>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/fl_question_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>
        </ScrollView>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/bt_submitExam"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textAllCaps="false"
        android:padding="@dimen/dp_20"
        fontPath="fonts/Ubuntu-M.ttf"
        android:background="@color/colorOrange"
        android:textSize="@dimen/sp_35"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:onClick="@{fragment::submitResult}"
        android:text="Submit"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:background="@drawable/ic_arrows_bg">
            <ImageButton
                android:id="@+id/btn_previousquestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingRight="@dimen/dp_20"
                android:enabled="false"
                android:onClick="@{fragment::getPreviousQuestion}"
                android:src="@drawable/previous_question_selector"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/dp_20"
                android:enabled="true"
                android:onClick="@{fragment::getNextQuestion}"
                android:src="@drawable/next_question_selector"/>
        </LinearLayout>

</RelativeLayout>
    </LinearLayout>
</layout>