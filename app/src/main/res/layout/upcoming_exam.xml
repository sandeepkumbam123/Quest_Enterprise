<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightBlue">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/layout_examdate"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:padding="@dimen/dp_20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/exam_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="16"
                android:gravity="center"
                fontPath="fonts/Ubuntu-B.ttf"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_24"/>
            <TextView
                android:id="@+id/exam-day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="THU"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_20"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/exam_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exam_title"
            android:padding="@dimen/dp_10"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_24"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/exam_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Exam code"
                android:padding="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/duration_of_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="20 Min"
                android:padding="@dimen/dp_10"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>